<?xml version="1.0" encoding="UTF-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.bluetoothlowengery"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />


    <application
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.app.bluetoothlowengery.activity.BLEScanActivity"
            android:label="BLE Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name="com.app.bluetoothlowengery.activity.BLEControlActivity" />

        <service
            android:name="com.app.bluetoothlowengery.utils.BLEService"
            android:enabled="true" />
    </application>

</manifest>